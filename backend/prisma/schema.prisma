// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id     String  @id
  artist String
  round  Round[]
}

model Round {
  id       String   @id
  number   Int
  musicId  String
  music    String
  startAt  Int
  game     Game     @relation(fields: [gameId], references: [id])
  gameId   String
  tries    Int?     @default(0)
  finished Boolean? @default(false)
}
